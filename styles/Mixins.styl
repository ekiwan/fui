scrollable()
	overflow-y: auto
	-webkit-overflow-scrolling: touch // Enable iOS momentum scrolling

text-shadow(color)
	if color == light
		text-shadow: 0 -1px 0 rgba(0, 0, 0 ,0.25)
	else if color == dark
		text-shadow: 0 1px 0 rgba(255, 255, 255, 0.25)
	else
		text-shadow: color

bevel()
	box-shadow: inset 1px 1px 1px rgb(30, 30, 30)

emboss()
	box-shadow: inset 1px 1px 1px rgb(60, 60, 60)

embossPrimary()
	box-shadow: inset 1px 1px 1px rgb(27, 72, 145)

glow()
	border: 1px solid $glowColor
	box-shadow: 0 0 5px $glowColor
