.fui-checkbox,
.fui-radio
	display: inline-block
	position: relative
	margin: $widgetMargin
	height: $checkBoxSize

	padding-left: $checkBoxSize + $checkBoxLabelMargin

	color: $widgetFontColor

	vertical-align: top

	font-family: $baseFont

	input[type="checkbox"],
	input[type="radio"],
	i
		position: absolute
		background: $widgetBackground

		margin-left: -1*$checkBoxSize - $checkBoxLabelMargin

	i
		box-sizing: border-box
		display: inline-block
		width: $checkBoxSize
		height: $checkBoxSize

		color: $widgetBackground // Hide when unchecked
		text-align: center
		font-size: 18px
		font-style: normal
		line-height: 16px

		cursor: pointer

	input[type="checkbox"],
	input[type="radio"]
		opacity: 0.0001

		&:checked + i
			color: $widgetFontColor // Show when checked

	&.fui-primary
		&, &:active
			background: transparent

		i
			color: $widgetBackgroundPrimary // Hide when unchecked
			background: $widgetBackgroundPrimary

	input:focus + i
		width: $checkBoxSize + 2
		height: $checkBoxSize + 2

		margin: -1px
		margin-left: -1*$checkBoxSize - $checkBoxLabelMargin - 1

		glow()

.fui-checkbox
	i
		border-radius: 2px

