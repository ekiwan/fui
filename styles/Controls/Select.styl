.fui-select
	display: inline-block
	position: relative

	&:after
		position: absolute
		top: 19px
		right: 20px
		display: block
		content: 'â–¾'
		color: transparent
		color: rgba($widgetFontColor, 1)
		text-shadow: light

		pointer-events: none // Clicks pass through to select

	&.fui-primary
		background: transparent

.fui-select select
	// IE 8: Top and bottom padding of 10px is required to align the text vertically
	padding: 10px 28px 10px 8px

	cursor: pointer

	&.fui-primary:active
		background: $widgetBackgroundPrimary