@font-face {
	font-family: 'fuicon';
	src:url('fonts/fuicon.eot');
	src:url('fonts/fuicon.eot?#iefix') format('embedded-opentype'),
		url('fonts/fuicon.woff') format('woff'),
		url('fonts/fuicon.ttf') format('truetype'),
		url('fonts/fuicon.svg#fuicon') format('svg');
	font-weight: normal;
	font-style: normal;
}

.fuicon-menu, .fuicon-check, .fuicon-dot, .fuicon-error, .fuicon-warning, .fuicon-info, .fuicon-success {
	&:before {
		font-family: 'fuicon';
		speak: none;
		font-style: normal;
		font-weight: normal;
		font-variant: normal;
		text-transform: none;
		line-height: 1;
		-webkit-font-smoothing: antialiased;
	}
}
.fuicon-menu:before {
	content: "\e000";
}
.fuicon-check:before {
	content: "\e001";
}
.fuicon-dot:before {
	content: "\e002";
}
.fuicon-error:before {
	content: "\e003";
}
.fuicon-warning:before {
	content: "\e004";
}
.fuicon-info:before {
	content: "\e005";
}
.fuicon-success:before {
	content: "\e006";
}
