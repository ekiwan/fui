.fui-error,
.fui-warning,
.fui-info,
.fui-success,
.fui-alert
	margin: $widgetMargin * 2
	padding: $widgetMargin * 1.5

	font-family: $baseFont

	border-radius: $widgetBorderRadius

.fui-info,
.fui-alert
	background: $alertInfoBackground
	&:after
		border-color: $alertInfoBackground

.fui-success
	background: $alertSuccessBackground
	&:after
		border-color: $alertSuccessBackground

.fui-error
	background: $alertErrorBackground
	&:after
		border-color: $alertErrorBackground

.fui-warning
	background: $alertWarningBackground
	&:after
		border-color: $alertWarningBackground
